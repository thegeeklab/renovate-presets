{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": ["Base preset for use with thegeeklab repos"],
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":rebaseStalePrs",
    ":semanticCommits",
    ":semanticCommitScope(deps)",
    "docker:enableMajor",
    ":masterIssue",
    "group:linters"
  ],
  "docker": {
    "pinDigests": true
  },
  "packageRules": [
    {
      "description": "Automerge docs theme updates",
      "datasources": ["github-releases"],
      "packagePatterns": [
        "^thegeeklab/hugo-(geekdoc|geekblog)"
      ],
      "updateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "depTypeList": ["devDependencies", "dev-dependencies"],
      "updateTypes": ["pin", "digest", "patch", "minor"],
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^Makefile$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( versioning=(?<versioning>.*?))?\\n.*?_VERSION (:|\\?)= (?<currentValue>.*)\\s"
      ]
    }
  ],
  "droneci": {
    "enabled": false
  }
}
